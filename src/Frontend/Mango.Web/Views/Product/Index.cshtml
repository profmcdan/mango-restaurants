@using System.Globalization
@model IEnumerable<Mango.Web.Models.ProductDto>

@{
    ViewData["Title"] = "Products";
}
<h1>@ViewData["Title"]</h1>

<br/>
<br/>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-plus">Create New Product</i></a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Date Created</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model!)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@item.Price.ToString("c")</td>
                <td>@item.CreatedAt.Date.ToString("d")</td>
                <td><i class="fas fa-edit" style="color: #146c43"></i></td>
                <td><i class="fas fa-trash" style="color: #6a1a21"></i></td>
            </tr>
        }
        </tbody>
    </table>
</div>