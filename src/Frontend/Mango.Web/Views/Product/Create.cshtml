@model Mango.Web.Models.CreateProductDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Create" enctype="multipart/form-data" >
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Create Product</h1>
        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control"/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control"/>
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>
            
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control"/>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control"/>
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            
            <div class="col-2">
                <label asp-for="Image" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" class="form-control"/>
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back to List</a>
            </div>
            
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control"/>
            </div>
            
        </div>
    </div>
</form>
